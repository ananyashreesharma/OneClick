# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/oneclicknotes
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/oneclicknotes

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Firebase Configuration (for file storage)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Cloudinary Configuration (alternative to Firebase)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=1

# Security
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=30d
